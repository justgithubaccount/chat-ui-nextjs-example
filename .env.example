# Traefik Domain Configuration (for production with external Traefik)
DOMAIN_NAME=example.com
SUBDOMAIN=chat
# The above will serve your Next.js app at: https://chat.example.com

# Database
DATABASE_URL="postgresql://chatuser:changeme@localhost:5432/chatdb"
POSTGRES_USER=chatuser
POSTGRES_PASSWORD=changeme
POSTGRES_DB=chatdb

# NextAuth
# For production with Traefik, this will be automatically set to https://${SUBDOMAIN}.${DOMAIN_NAME}
# For local development, use http://localhost:3000
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secret-here-generate-with-openssl-rand-base64-32

# GitHub OAuth
# Create at: https://github.com/settings/developers
# Callback URL: http://localhost:3000/api/auth/callback/github
GITHUB_ID=your-github-oauth-app-id
GITHUB_SECRET=your-github-oauth-secret

# Google OAuth
# Create at: https://console.cloud.google.com/apis/credentials
# Callback URL: http://localhost:3000/api/auth/callback/google
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# OpenAI
OPENAI_API_KEY=sk-...
OPENAI_BASE_URL=https://api.openai.com/v1

# File Storage
UPLOAD_DIR=/app/public/uploads
MAX_FILE_SIZE=10485760

# Optional: S3-Compatible Storage (MinIO)
# S3_ENDPOINT=http://minio:9000
# S3_ACCESS_KEY=minioadmin
# S3_SECRET_KEY=minioadmin
# S3_BUCKET=chat-uploads

# Optional: MinIO
# MINIO_ROOT_USER=minioadmin
# MINIO_ROOT_PASSWORD=minioadmin
